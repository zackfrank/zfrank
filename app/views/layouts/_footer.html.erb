<footer>
  <%= link_to image_tag(
      'instagram_icon.png',
      alt: 'Instagram icon',
      class: 'social-icon'
    ),
    'https://www.instagram.com/accounts/login/?next=%2Fthezfrank%2F&source=follow',
    class: 'social-link',
    target: :_blank
  %>

  <div class="text-center mb-3">
    <a
      href="https://twitter.com/thezfrank?ref_src=twsrc%5Etfw"
      class="twitter-follow-button"
      data-size="large"
      data-show-count="false">Follow @thezfrank
    </a>
  </div>

  <iframe
    src="https://www.facebook.com/plugins/like.php?href=https%3A%2F%2Fwww.facebook.com%2Fthezfrank&width=138&layout=button&action=like&size=large&share=true&height=65&appId"
    class="social-widget"
    width="138"
    height="65"
    scrolling="no"
    frameborder="0"
    allowfullscreen="true"
    allow="autoplay; clipboard-write; encrypted-media; picture-in-picture; web-share">
  </iframe>

  <div class="text-center mb-3 mt-5">
    <%= link_to "Contact", 'mailto: management@zfrank.com' %> &#8226;
    <%= link_to "Privacy", 'p/privacy' %>
  </div>
</footer>